// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ProcessedCV {
  id                  String   @id @default(cuid())
  originalFileName    String
  originalContent     String
  extractedData       String   // JSON string of extracted CV data
  personalInfoRemoved String   // Anonymized content
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model InternalCV {
  id                String   @id @default(cuid())
  candidateId       String   @unique // Unique internal reference ID
  originalFileName  String
  anonymousData     String   // JSON string of anonymous CV data
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model LetterHead {
  id          String   @id @default(cuid())
  companyName String
  phone       String?
  email       String?
  website     String?
  address     String?
  logo        String?  // Base64 encoded logo
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

